<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/carousel_0_Layout"
                android:layout_width="@dimen/carousel_width"
                android:layout_height="@dimen/carousel_height"
                android:background="@android:color/transparent">

    <com.everysight.common.carouselm.CarouselItemView
        android:id="@+id/carousel_0_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
       android:background="@android:color/transparent"
        android:src="@null" />

    <TextView
        android:id="@+id/carousel_0_textCenter"
        android:layout_width="@dimen/carousel_text_width"
        android:layout_height="@dimen/carousel_text_height"
        android:layout_below="@+id/carousel_0_center"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/carousel_text_marginTop"
        android:background="@android:color/transparent"
        android:ellipsize="end"
        android:gravity="center|top"
        android:maxLines="2"
        android:textColor="#00AF00"
        android:textSize="@dimen/carousel_text_size"
        android:textStyle="bold"
       />

</RelativeLayout>